{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "endOfLine": "lf",
        "printWidth": 120,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "arrowParens": "avoid"
      }
    ],
    "no-var": 2,
    "no-mixed-spaces-and-tabs": "error"
  }
}