{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist/esm",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "incremental": true,
    "esModuleInterop": true,
    "lib": ["ESNext"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
