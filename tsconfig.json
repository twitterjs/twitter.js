{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "incremental": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
